<section class="axiom_page_container">
	<div class="axiom_wrapper">
		<div class="axiom_content_left">
			<script>
				document.write('<a href="' + document.referrer + '"><div class="goBackButton">return to article</div></a>');
			</script>			
			<img alt="{{ axiom['hero-image-attribution'] }}" title= "{{ axiom['hero-image-attribution'] }}" src="{{ focusedImageUrl(axiom['hero-image-s3-key'], [3,1.75], axiom['hero-image-metadata'],{'w': 640, 'q': 60, 'fmt': 'pjpeg', 'auto': 'format'}) }}">
