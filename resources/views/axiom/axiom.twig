					<a  title="Share on facebook" class="fb-xfbml-parse-ignore facebook social-share"
					target="_blank"
					href="https://www.facebook.com/sharer/sharer.php?u={{ shareUrl }}&amp;t={{ axiom['summary'] }}"
					data-service="facebook"
					data-social-media-type="facebook"
					data-social-media-share-url="{{ shareUrl }}"
					data-mobile-iframe="true">
					<span class="social-share__icon social-share--facebook"></span>
				</a>
			</div>

			<div class="tw-wrapper">
				<a  title="Share on twitter" class="twitter social-share"
				target="_blank"
				href="https://twitter.com/intent/tweet?url={{ shareUrl }}&amp;text={{ axiom['headline'] | trim | url_encode  }}"
				data-service="twitter"
				data-social-media-type="twitter"
				data-social-media-share-url="{{ shareUrl }}">
				<span class="social-share__icon social-share--twitter"></span>
			</a>
		</div>
	</div>

